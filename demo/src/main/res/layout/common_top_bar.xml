<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_top_bar_height"
    android:background="@color/white" >

    <ImageButton
        android:id="@+id/imageView_left"
        android:layout_width="@dimen/activity_top_bar_height"
        android:layout_height="@dimen/activity_top_bar_height"
        android:background="@drawable/back_button_default_style"
        android:padding="12dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/app_main_theme_color"
        android:textSize="@dimen/textview_big_size" />

    <ImageButton
        android:id="@+id/imageView_right"
        android:layout_width="@dimen/activity_top_bar_height"
        android:layout_height="@dimen/activity_top_bar_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/back_button_default_style"
        android:padding="12dp"
        android:scaleType="centerInside" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/global_line_main_color" />

</RelativeLayout>