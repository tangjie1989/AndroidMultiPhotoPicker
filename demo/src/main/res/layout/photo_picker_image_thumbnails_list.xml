<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/image_list_back_btn"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_button_default_style"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/back_default" />
        </RelativeLayout>

        <!--
             <Button
            android:id="@+id/image_list_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="相册" />
        -->

        <TextView
            android:id="@+id/image_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/app_main_theme_color"
            android:textSize="@dimen/textview_middle_size" />

        <!--
             <Button
            android:id="@+id/image_list_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="取消" />
        -->

        <Button
            android:id="@+id/confirm_selected_thumbnails_image"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/back_button_default_style"
            android:enabled="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="确定"
            android:textColor="@color/deepgrey"
            android:textSize="@dimen/textview_smiddle_size" />
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/global_line_main_color" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/image_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <include layout="@layout/common_loading_view" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/greyest_transparent"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/scan_selected_thumbnails_image"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/back_button_default_style"
            android:enabled="false"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="预览"
            android:textColor="@color/white"
            android:textSize="@dimen/textview_smiddle_size" />

        <!--
             <Button
            android:id="@+id/confirm_selected_thumbnails_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:text="确定" />
        -->
    </RelativeLayout>

</LinearLayout>