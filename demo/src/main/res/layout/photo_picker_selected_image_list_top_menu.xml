<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scan_selected_image_thumbnial_top_menu"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/scan_selected_image_thumbnial_back_btn"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/back_button_default_style"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView_left"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/back_default" />
    </RelativeLayout>

    <!--
         <Button
        android:id="@+id/scan_selected_image_thumbnial_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="返回" />
    -->

    <TextView
        android:id="@+id/scan_selected_image_thumbnial_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="预览"
        android:textColor="@color/app_main_theme_color"
        android:textSize="@dimen/textview_middle_size" />

    <CheckBox
        android:id="@+id/scan_selected_image_thumbnial_operation"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:button="@null"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true" 
        android:background="@drawable/check_state"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/global_line_main_color" />

</RelativeLayout>